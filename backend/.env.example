# Database
DATABASE_URL=postgresql://coderag:coderag_pass@localhost:5432/coderag

# Redis
REDIS_URL=redis://localhost:6379/0

# Qdrant
QDRANT_URL=http://localhost:6333

# LLM Providers
LLM_PROVIDER=ollama
LLM_MODEL=qwen3:latest
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OLLAMA_URL=http://localhost:11434
VLLM_URL=http://localhost:8000

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Environment
ENVIRONMENT=development
DEBUG=true

# Projects
PROJECTS_DIR=/projects

# Logging
# Enable logging prompts used in analysis to file
LOG_PROMPTS_TO_FILE=true
LOG_PROMPTS_FILE_PATH=logs/prompts.log

# Enable logging failed analyses with error details
LOG_FAILED_ANALYSES_TO_FILE=true
LOG_FAILED_ANALYSES_FILE_PATH=logs/failed_analyses.log
